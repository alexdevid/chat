<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="AppBundle\Model" defaultIdMethod="native">
    <table name="page">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="title" type="varchar" primaryString="1" size="255" />
        <column name="slug" type="varchar" primaryString="1" size="255" />
        <column name="description" type="longvarchar" />
        <column name="content" type="longvarchar" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title, content, description" />
        </behavior>
        <behavior name="timestampable" />
    </table>
    <table name="message">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="name" type="varchar" size="255" />
        <column name="email" type="varchar" size="255" />
        <column name="message" type="longvarchar" />
        <behavior name="timestampable" />
    </table>
    <table name="article">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="category_id" type="integer" />
        <column name="views" type="integer" />
        <column name="slug" type="varchar" primaryString="1" size="255" />
        <column name="title" type="varchar" primaryString="1" size="255" />
        <column name="image" type="varchar" size="255" />
        <column name="url" type="varchar" size="255" />
        <column name="description" type="longvarchar" />
        <column name="content" type="longvarchar" />
        <column name="status" type="boolean" default="true" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title, content, description" />
        </behavior>
        <behavior name="timestampable" />
        <foreign-key foreignTable="category" isCrossRef="true">
            <reference local="category_id" foreign="id" />
        </foreign-key>
    </table>
    <table name="category">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="title" type="varchar" primaryString="1" size="255" />
        <behavior name="sluggable" />
        <behavior name="timestampable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="title" />
        </behavior>
    </table>
    <table name="tag">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="title" type="varchar" primaryString="1" size="255" />
        <column name="slug" type="varchar" primaryString="1" size="255" />
    </table>
    <table name="article_tag" isCrossRef="true">
        <column name="article_id" type="integer" primaryKey="true"/>
        <column name="tag_id" type="integer" primaryKey="true"/>
        <foreign-key foreignTable="article">
            <reference local="article_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="tag">
            <reference local="tag_id" foreign="id"/>
        </foreign-key>
    </table>
</database>